# Este notebook calcula mÃ©tricas de rentabilidad y riesgo en acciones usando NumPy.

# 1ï¸âƒ£ Importar librerÃ­as necesarias
import numpy as np
import pandas as pd
import yfinance as yf
import matplotlib.pyplot as plt

# 2ï¸âƒ£ Descargar datos histÃ³ricos (Ejemplo: AAPL)
ticker = "AAPL"
data = yf.download(ticker, start="2020-01-01", end="2024-01-01")["Adj Close"]

# 3ï¸âƒ£ Calcular Retornos Diarios con NumPy
returns = np.diff(data) / data[:-1]
mean_return = np.mean(returns)
volatility = np.std(returns)

print(f"ğŸ“Š Retorno Medio Diario: {mean_return:.4f}")
print(f"âš ï¸ Volatilidad Diaria: {volatility:.4f}")

# 4ï¸âƒ£ Calcular Rentabilidad Acumulada
cumulative_returns = np.cumprod(1 + returns) - 1

# 5ï¸âƒ£ Visualizar Retornos y Rentabilidad Acumulada
plt.figure(figsize=(12,5))
plt.plot(data.index[1:], cumulative_returns, label="Rentabilidad Acumulada", color="green")
plt.title("ğŸ“ˆ Rentabilidad Acumulada de AAPL")
plt.xlabel("Fecha")
plt.ylabel("Rentabilidad")
plt.legend()
plt.show()

# 6ï¸âƒ£ SimulaciÃ³n Monte Carlo para Predecir Precios Futuros
simulations = 1000
days = 252
simulated_returns = np.random.normal(mean_return, volatility, (days, simulations))
simulated_prices = np.zeros((days, simulations))
simulated_prices[0] = data.iloc[-1]

for t in range(1, days):
    simulated_prices[t] = simulated_prices[t-1] * (1 + simulated_returns[t])

# ğŸ”¥ Visualizar SimulaciÃ³n Monte Carlo
plt.figure(figsize=(12,6))
plt.plot(simulated_prices, alpha=0.2, color="blue")
plt.title("ğŸ“Š SimulaciÃ³n Monte Carlo de Precios Futuros")
plt.xlabel("DÃ­as")
plt.ylabel("Precio Simulado")
plt.show()
