#  Predicci贸n de Precios con ARIMA
# Este notebook implementa un modelo ARIMA para predecir precios de acciones.

# 1锔 Importar librer铆as necesarias
import pandas as pd
import numpy as np
import yfinance as yf
import matplotlib.pyplot as plt
from statsmodels.tsa.arima.model import ARIMA
from statsmodels.graphics.tsaplots import plot_acf, plot_pacf

# 2锔 Descargar datos hist贸ricos (Ejemplo: AAPL)
ticker = "AAPL"
data = yf.download(ticker, start="2020-01-01", end="2024-01-01")["Adj Close"]

# 3锔 Visualizar los precios hist贸ricos
plt.figure(figsize=(12,6))
plt.plot(data, label="Precio Ajustado")
plt.title(" Precio de Cierre de AAPL")
plt.xlabel("Fecha")
plt.ylabel("Precio")
plt.legend()
plt.show()

# 4锔 An谩lisis de Autocorrelaci贸n
plot_acf(data.dropna(), lags=30)
plot_pacf(data.dropna(), lags=30)
plt.show()

# 5锔 Definir el modelo ARIMA (p,d,q)
modelo = ARIMA(data, order=(5,1,2))
modelo_entrenado = modelo.fit()

# 6锔 Realizar predicciones
predicciones = modelo_entrenado.forecast(steps=30)

#  Visualizar predicciones
plt.figure(figsize=(12,6))
plt.plot(data.index, data, label="Real", color="blue")
plt.plot(pd.date_range(start=data.index[-1], periods=30, freq='D'), predicciones, label="Predicci贸n", linestyle="dashed", color="red")
plt.title(" Predicci贸n de Precios con ARIMA")
plt.xlabel("Fecha")
plt.ylabel("Precio")
plt.legend()
plt.show()

# 7锔 Evaluar el modelo
residuales = modelo_entrenado.resid
plt.figure(figsize=(10,5))
plt.hist(residuales, bins=30, color="purple", alpha=0.7)
plt.title(" Distribuci贸n de Residuales del Modelo ARIMA")
plt.xlabel("Error")
plt.ylabel("Frecuencia")
plt.show()
