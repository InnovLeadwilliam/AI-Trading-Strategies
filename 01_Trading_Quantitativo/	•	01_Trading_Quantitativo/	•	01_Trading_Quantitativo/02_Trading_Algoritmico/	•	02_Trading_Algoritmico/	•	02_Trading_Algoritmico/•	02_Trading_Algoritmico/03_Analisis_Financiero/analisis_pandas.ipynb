#  An谩lisis Financiero con Pandas
# Este notebook analiza datos hist贸ricos de acciones usando Pandas.

# 1锔 Importar librer铆as necesarias
import pandas as pd
import numpy as np
import yfinance as yf
import matplotlib.pyplot as plt
import seaborn as sns

# 2锔 Descargar datos hist贸ricos de una acci贸n (Ejemplo: AAPL)
ticker = "AAPL"
data = yf.download(ticker, start="2020-01-01", end="2024-01-01")

# 3锔 Mostrar primeras filas del dataset
print(" Datos descargados:")
print(data.head())

# 4锔 C谩lculo de Retornos Diarios
data["Daily Return"] = data["Adj Close"].pct_change()

# 5锔 C谩lculo de Media y Volatilidad
mean_return = data["Daily Return"].mean()
volatility = data["Daily Return"].std()
print(f" Media de retornos diarios: {mean_return:.4f}")
print(f"锔 Volatilidad diaria: {volatility:.4f}")

# 6锔 Visualizar los precios hist贸ricos
plt.figure(figsize=(12,6))
plt.plot(data.index, data["Adj Close"], label="Precio Ajustado", color="blue")
plt.title(" Evoluci贸n del Precio de AAPL")
plt.xlabel("Fecha")
plt.ylabel("Precio")
plt.legend()
plt.show()

# 7锔 Histograma de Retornos Diarios
plt.figure(figsize=(10,5))
sns.histplot(data["Daily Return"].dropna(), bins=50, kde=True, color="purple")
plt.title(" Distribuci贸n de Retornos Diarios de AAPL")
plt.xlabel("Retorno Diario")
plt.ylabel("Frecuencia")
plt.show()
